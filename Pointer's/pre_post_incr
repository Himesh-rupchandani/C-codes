#include<iostream>
using namespace std;

int main(){        // pre
   int a = 15;
   int* ptr = &a;
   int b = ++(*ptr);
   cout << a << " " << b;
    return 0;
}

// 16 16

#include<iostream>
using namespace std;

int main(){      //post
   int a = 15;
   int* ptr = &a;
   int b = (*ptr)++;
   cout << a << " " << b;
    return 0;
}

// 16 15      Here b get 15 than a = a + 1 happen.
